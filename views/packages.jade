extends layout

block content
    .container
        .row
            .col-md-6
                h1
                    = header || "Packages"
                h4
                    = subHeader || "All packages currently hosted on theForthNet"

    .container
        .row
            each packet in packets
                if packet.name != 'testy'
                    .col-sm-6.col-lg-4
                        a.boxItem.two-line.fadeout.package(href="/package/#{packet.name}")
                            +fa("cube").icon
                            .name= packet.name
                            .description= packet.description

