doctype html
include mixins
+script('/js/jquery.min.js')
+script('/js/jquery-ui.min.js')

mixin menuItem( link, icon, text )
    li
        a(id="menu-#{link}",href="#")
            +glyph(icon)
            span.hidden-xs
                | 
                = text

html
    head
        title Flink - theforth.net
        meta(name="viewport",content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width")
        +style('/css/jquery-ui-smoothness.min.css')
        +style('/css/console.css')
        +styles
    body
        div.navbar.navbar-fixed-top(role='navigation')
            div.container-fluid
                div.navbar-header
                    a.navbar-brand(href="/",title="Forth-Link")
                        | Flink
                ul
                    +menuItem("run",        "play",             __("Run"    ) )
                    +menuItem("load",       "cloud-download",   __("Load"   ) )
                    +menuItem("save",       "cloud-upload",     __("Save"   ) )
                    +menuItem("user",       "user",             __("Users"  ) )
                    +menuItem("info",       "info-sign",        __("Info"   ) )
                    +menuItem("logout",     "log-out",          __("Logout" ) )

        div.container-fluid.main-content
            block content

        footer
            div.container-fluid
                div.row
                    div.col-xs-4
                        | powered by  
                        a(href='https://github.com/GeraldWodni/kern.js') kern.js
                    div.col-xs-8.text-right
                        | Â©copyright 2014 by 
                        a(href='http://wodni.at') Gerald Wodni

        +script('/js/bootstrap.min.js')
        +scripts
